<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SignUp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_theme">
            <TextView
                android:id="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:text="@string/sign_in_using"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="55dp"
                />

            <Button
                android:id="@+id/Google"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@id/txt"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:drawableEnd="@drawable/googleg_standard_color_18"
                android:backgroundTint="@color/cardview_dark_background"
                android:text="@string/sign_in_using_googls"
                android:textColor="@color/white"
                android:textAlignment="center" />

            <Button
                android:id="@+id/Meta"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@id/Google"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/white"
                android:drawableEnd="@drawable/facebook2"
                android:backgroundTint="@color/cardview_dark_background"
                android:layout_marginBottom="20dp"
                android:text="@string/sign_in_using_meta" />
        </RelativeLayout>
</layout>